<div class="wrapper-spring-wood text-center">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <ul class="flex-container">
          <% @grid.each do |letter| %>
          <li class="flex-item"><%= letter %></li>
          <% end %>
        </ul>
        <div class="flex-container">
          <form action="/score">
            <div class="form-group">
              <label for="question"><h1>Here is your grid. Good luck!</h1></label>
              <input class="form-control text-center" type="text" id="question" name="proposition" placeholder="What's your proposition?">
              <input type="hidden" value="<%= @grid.join %>" name="grid">
              <input type="hidden" value="<%= @start_time %>" name="start_time">
              <button type="submit" class="btn btn-danger form-control">Check your score</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
